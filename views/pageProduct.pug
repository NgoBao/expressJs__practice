extends pageFormat.pug 

block product 

    #pageProduct
        .pageProduct__slider
            h2 We&apos;re here
        .grid.wide
            .row
                .col.l-3.md-12.sm-12
                    .pageProduct__category
                        div
                            i.fas.fa-stream(style='padding-right: var(--mp-1);')
                            |                             Category
                        
                        a(href='/product/1', class= '' + type.all) All 
                        a(href='/product/categorized/commercial/1', class= '' +type.commercial ) Commercial
                        a(href='/product/categorized/blog/1', class= '' + type.blog) Blog
                        a(href='/product/categorized/shop/1', class= '' + type.shop) Shop
                        a(href='/product/categorized/app/1', class= '' + type.app) App
                        a(href='/product/categorized/system/1', class= '' + type.system) System (w)
                .col.l-9.md-12.sm-12
                    .pageProduct__list
                        h1
                            | Our Design
                        .grid
                            ul.row
                                each product in products 
                                    li.col.l-4.md-4.sm-10.sm-o-1
                                        .cardProduct
                                            .cardProduct__img
                                                img(src='/img/imgPexel/163880457_1019441735254537_7920892448431206078_n.jpg' alt='product pic')
                                            .cardProduct__title
                                                | #{product.title}
                                            .cardProduct__body
                                                h4 Price: #{product.price}$
                                                h5 Sold: #{product.sold}
                    .pageProduct__pagination
                        a(href= '/product/' + arrPagination[0])
                            i.fas.fa-chevron-left
                        a(href= '/product/' + arrPagination[0]) #{arrPagination[0][arrPagination[0].length-1]}
                        a(href= '/product/' + arrPagination[1]) #{arrPagination[1][arrPagination[1].length-1]}
                        a(href= '/product/' + arrPagination[2]) #{arrPagination[2][arrPagination[2].length-1]}
                        a(href= '/product/' + arrPagination[2])
                            i.fas.fa-angle-right  
    